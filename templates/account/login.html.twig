{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block body %}
	<div class="container">

		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light my-3 mx3 p-2 text-dark">
					<h1>Connectez vous !</h1>
					<form action="">
						<div class="form-group">
							<label for="email">email</label>
							<input type="text" name="_username" id="email" class="form-control" placeholder="Adresse ..." required>
						</div>
						<div class="form-group">
							<label for="password">Mot de passe</label>
							<input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control" required>
						</div>
						<div class="form-group">
							<input type="submit" value="Connexion !" class="btn btn-success" required>
						</div>
					</form>
				</div>
			</div>
		</div>

	</div>

{% endblock %}
